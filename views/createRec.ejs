<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("layouts/HtmlHead") %> 
</head>
<body class="rf">
    <main class="recmain">
        <h1>Create record</h1>
        <div class="grup">
            <button id="addLoad">Add loading</button>
            <button id="addUnload">Add unloading</button>
        </div>
        <div class="grup">
            <button id="removeLoad">Remove loading</button>
            <button id="removeUnload">Remove unloading</button>
        </div>
        <form action="/companies/<%= company.id %>/trucks/<%= truck.number %>/records" method="POST" class="formTabel">
            <input type="text" name="commandNr" placeholder="Command Nr." required>
            <input type="date" name="commandDate" placeholder="CommandDate">
            <input type="text" name="creditNoteNr" placeholder="creditNoteNr">
            <input type="date" name="creditNoteDate" placeholder="creditNoteDate">
            <div class="loadings" data-loadings="">
                <input type="hidden" id="loadingsNr" name="loadingsNr" value="1">
                <div class="load">
                    <input type="text" name="loadCompany" placeholder="Loading Place" value="loadcom">
                    <input type="text" name="loadAddress" placeholder="Loading Place" value="loadaddr">
                </div>
            </div>
            <div class="unloadings" data-unloadings="">
                <input type="hidden" id="unloadingsNr" name="unloadingsNr" value="1">
                <div class="unload">
                    <input type="text" name="unloadCompany" placeholder="Unloading place" value="unlcom">
                    <input type="text" name="unloadAddress" placeholder="Unloading place" value="unladdr">
                </div>
            </div>
            <input type="text" name="paymentStatus" id="payment" placeholder="Payment status" required />
            <input type="number" name="km" placeholder="Enter km">
            <input type="number" name="price" placeholder="Enter price">
            <br>
            <input type="submit" id="submit" value="Create Record">
        </form>
    </main>
</body>
</html>